

<div class="row">
    <div class="col-xs-12">
        <h1 class="display-4">{{#if note}}{{note.title}} {{/if}}</h1>
        <div class="text-black my-2">
        Description: {{#if note}}{{note.body}} {{/if}}
        </div>
        <div class="text-black my-2">
        Key: {{#if notekey}}{{notekey}} {{/if}}
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-xs-12">
        <button class="btn btn-primary">
            <a class="text-white" href="/notes/update?key={{notekey}}" style=" text-decoration:none">Edit</a>
        </button>
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
            Remove      
        </button>
       
    </div>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Remove Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure <span class="font-weight-bold text-danger">delete</span> <span class="font-italic">"{{title}}"</span> permanently ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
         <form action="/notes/remove/confirm" method="POST">
            <input type="hidden" name="notekey" value='{{#if note}}{{notekey}}{{/if}}'>
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>
